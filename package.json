{
  "name": "event-management-system",
  "version": "1.0.0",
  "description": "Multi-timezone event management system",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "build": "npm install && npm install --prefix client && npm run build --prefix client"
  },
  "keywords": ["event", "management", "timezone", "mern"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
